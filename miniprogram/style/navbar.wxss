.navbar-container {
  display: flex;
  flex-direction: column;
}
.navbar {
  display: flex;
  position: fixed;
  flex-direction: row;
  left: 0;
  top: 0;
  z-index: 99;

  width: 100%;
  background-color: #fff;
  border-bottom: 1rpx solid #dfdfdf;
  box-sizing: border-box;

  font-size: 33rpx;
  color: #a8a8a8;
  text-align: center;
}
.navbar-item {
  flex: 1;
  padding: 10rpx 0px;
}
.navbar-item-active {
  border-bottom: 5rpx solid #009a61;
  font-weight: 500;
  color: #009a61;
  transition: all 0.4s;
}

.navbar-content {
  margin-top: 65rpx;
}
