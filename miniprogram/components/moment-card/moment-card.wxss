page {
    background-color: #F1F1F1;
}

.moment {
    padding: 20rpx;
    background-color: #FFF;
}

.moment-title {
    display: flex;
    align-items: center;
}

.moment-avatar {
    width: 64rpx;
    height: 64rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.moment-box {
    flex: 1;
}

.moment-time {
    font-size: 24rpx;
    color: #939393;
}

.moment-content {
    margin: 20rpx 0;
    font-size: 32rpx;
    font-weight: 400;
    line-height: 1.5;
}

.moment-img {
    display: flex;
    flex-wrap: wrap;
    margin: 0 auto;
}

.moment-img .img {
    width: 230rpx;
    height: 230rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
}

.moment-img .img:nth-child(3n) {
    margin-right: 0;
}

.moment-nickName {
    font-size: 32rpx;
}