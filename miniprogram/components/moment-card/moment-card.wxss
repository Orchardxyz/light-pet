page {
  background-color: #f1f1f1;
}

.moment {
  padding: 20rpx;
  background-color: #fff;
}

.moment-title {
  display: flex;
  align-items: center;
}

.moment-avatar {
  margin-right: 10rpx;
}

.moment-box {
  flex: 1;
  color: #333;
}

.moment-pet {
  display: flex;
}

.moment-time,
.moment-view {
  display: inline;
  font-size: 24rpx;
  color: #939393;
  margin-right: 25rpx;
}

.moment-content {
  margin: 20rpx 0;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 1.5;
}

.moment-img {
  display: flex;
  flex-wrap: wrap;
  margin: 0 auto;
}

.moment-img .img {
  width: 230rpx;
  height: 230rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.moment-img .img:nth-child(3n) {
  margin-right: 0;
}

.moment-nickName {
  font-size: 32rpx;
}

/* iconfont */
.icon-star-copy,
.icon-star {
  font-size: 45rpx;
  padding: 15rpx;
}

.icon-shanchu1 {
  padding-left: 15rpx;
  color: #cc3333;
  font-weight: bold;
}

.icon-clock,
.icon-view {
  margin-right: 8rpx;
  font-size: 28rpx;
}
