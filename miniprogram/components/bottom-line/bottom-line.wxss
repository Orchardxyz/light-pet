.bottom-line {
  text-align: center;
  height: 50rpx;
  margin-top: 10rpx;
  margin-bottom: 110rpx;
}

.line-text {
  display: table;
  width: 100%;
  line-height: 50rpx;
  white-space: nowrap;
  border-spacing: 0.5rem 0;
  font-size: 30rpx;
  color: gray;
}

.line-text::before,
.line-text::after {
  display: table-cell;
  content: "";
  width: 50%;
  background: linear-gradient(#eee, #eee) repeat-x center;
  background-size: 0.05rem 0.05rem;
}
