<view class="operation">
  <view class="operation-item" bind:tap="handleComment">
    <i class="iconfont icon-comment">
      <text>{{moment.commentCount === 0 ? undefined : moment.commentCount}}</text>
    </i>
  </view>
  <view class="operation-item" bind:tap="handleClickLike">
    <i class="iconfont {{!moment.isLike ? 'icon-pet' : 'icon-pets'}}">
      <text>{{moment.likeCount === 0 ? undefined : moment.likeCount}}</text>
    </i>
  </view>
  <view class="operation-item">
    <button size="mini" open-type="share" data-moment="{{moment}}" data-momentId="{{moment._id}}" class="operation-share-btn" hover-class="operation-share-btn-hover">
      <i class="iconfont icon-fenxiang-1"></i>
    </button>
  </view>
</view>
<!-- 登录 -->
<LP-login modalShow="{{loginShow}}" />
<!-- 发表评论 -->
<view class="page">
  <view class="page__bd">
    <view class="weui-demo-dialog {{commentShow ? 'weui-demo-dialog_show' : ''}}">
      <view class="weui-mask" bindtap="closeCommentDialog"></view>
      <view class="weui-half-screen-dialog">
        <view class="weui-half-screen-dialog__hd">
          <view class="weui-half-screen-dialog__hd__side">
            <view bindtap="closeCommentDialog" class="weui-icon-btn weui-icon-btn_close">关闭</view>
          </view>
          <view class="weui-half-screen-dialog__hd__main">
            <text class="weui-half-screen-dialog__title">发表评论</text>
            <text class="weui-half-screen-dialog__subtitle">{{wordNum}}/{{MAX_COUNT}}</text>
          </view>
        </view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell">
            <view class="weui-cell__bd">
              <textarea 
              name="content" 
              class="weui-textarea" 
              placeholder="请输入评论" 
              maxlength="{{MAX_COUNT}}" 
              show-confirm-bar="{{false}}" 
              bindinput="handleInput"
              fixed="{{true}}" 
              style="height: 3.3em" />
            </view>
          </view>
        </view>
        <view class="weui-half-screen-dialog__ft">
          <button type="primary" class="weui-btn" bind:tap="submitComment">提交</button>
        </view>
      </view>
    </view>
  </view>
</view>