.container {
  margin-top: 35rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 500;
  margin: 15rpx;
}

.login {
  height: 80rpx;
  background-color: rgb(7, 192, 95);
  margin-top: 20rpx;
}

.login text {
  color: #fff;
  font-size: 36rpx;
  font-weight: 400;
  padding-left: 10rpx;
}

.weui-demo-dialog {
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}
.weui-half-screen-dialog {
  transition: all 0.3s;
  transform: translateY(100%);
}
.weui-demo-dialog_show {
  visibility: visible;
  opacity: 1;
}
.weui-demo-dialog_show .weui-half-screen-dialog {
  transform: translateY(0);
}
