<view class="page">
  <view class="page__bd">
    <view class="weui-demo-dialog {{loginShow ? 'weui-demo-dialog_show' : ''}}">
      <view class="weui-mask" bindtap="closeLoginDialog"></view>
      <view class="weui-half-screen-dialog">
        <view class="weui-half-screen-dialog__hd">
          <view class="weui-half-screen-dialog__hd__side">
            <view bindtap="closeLoginDialog" class="weui-icon-btn weui-icon-btn_close">关闭</view>
          </view>
          <view class="weui-half-screen-dialog__hd__main">
            <text class="weui-half-screen-dialog__title">轻宠社区</text>
          </view>
        </view>
        <view class="weui-half-screen-dialog__ft" style="display:flex; flex-direction: column; align-items: center; justify-content: center">
          <button type="primary" class="weui-btn" open-type="getUserInfo" bindgetuserinfo="getUserInfoLogin" style="margin-bottom: 30rpx; width: 65%;">
            <i class="iconfont icon-weixin" style="margin-right: 8rpx" />
            <text>微信快捷登录</text>
          </button>
          <button type="default" class="weui-btn" style="width: 65%;" catch:tap="closeLoginDialog">我再看看</button>
        </view>
      </view>
    </view>
  </view>
</view>