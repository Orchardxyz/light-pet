@import "../../../style/weui-common/half-screen-dialog.wxss";
.container {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
}

.operation {
  display: flex;
  justify-content: space-around;
  padding: 15rpx 5rpx;
  box-shadow: 0 0 10rpx #999;
}

.item {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 38rpx;
  color: #333;
}

.item .iconfont {
  font-size: 40rpx;
  margin-right: 15rpx;
  color: #666;
}

