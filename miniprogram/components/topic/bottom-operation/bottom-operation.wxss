.container {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
}

.operation {
  display: flex;
  justify-content: space-around;
  padding: 15rpx 5rpx;
}

.item {
  display: flex;
  align-items: center;
  font-size: 40rpx;
  color: #333;
}

.item .iconfont {
  font-size: 40rpx;
  margin-right: 5rpx;
}

.weui-demo-dialog {
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}
.weui-half-screen-dialog {
  transition: all 0.3s;
  transform: translateY(100%);
}
.weui-demo-dialog_show {
  visibility: visible;
  opacity: 1;
}
.weui-demo-dialog_show .weui-half-screen-dialog {
  transform: translateY(0);
}

/* iconfont */
.icon-like3 {
  color: #ff1f18;
}
