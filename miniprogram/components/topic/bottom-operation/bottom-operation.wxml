<view class="container">
  <view class="operation">
    <view class="item" bind:tap="clickLike">
      <i class="iconfont icon-{{isLike ? 'like3' : 'like2'}}}" style="color: {{isLike ? '#FF1F18' : undefined}}" />
      <text>喜欢</text>
    </view>
    <view class="item" bind:tap="openCommentDialog">
      <i class="iconfont icon-CommentEdit" />
      <text>参与讨论</text>
    </view>
  </view>
</view>
<!-- 发表评论 -->
<view class="page">
  <view class="page__bd">
    <view class="weui-demo-dialog {{isOpen ? 'weui-demo-dialog_show' : ''}}">
      <view class="weui-mask" bindtap="closeCommentDialog"></view>
      <view class="weui-half-screen-dialog">
        <view class="weui-half-screen-dialog__hd">
          <view class="weui-half-screen-dialog__hd__side">
            <view bindtap="closeCommentDialog" class="weui-icon-btn weui-icon-btn_close">关闭</view>
          </view>
          <view class="weui-half-screen-dialog__hd__main">
            <text class="weui-half-screen-dialog__title">发表评论</text>
            <text class="weui-half-screen-dialog__subtitle">{{wordNum}}/{{MAX_COUNT}}</text>
          </view>
        </view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell">
            <view class="weui-cell__bd">
              <textarea 
              name="content" 
              class="weui-textarea" 
              placeholder="请输入评论" 
              value="{{defaultValue}}"
              maxlength="{{MAX_COUNT}}" 
              show-confirm-bar="{{false}}" 
              bindinput="handleInput"
              fixed="{{true}}" 
              style="height: 3.3em" />
            </view>
          </view>
        </view>
        <view class="weui-half-screen-dialog__ft">
          <button type="primary" class="weui-btn" bind:tap="submitComment">提交</button>
        </view>
      </view>
    </view>
  </view>
</view>