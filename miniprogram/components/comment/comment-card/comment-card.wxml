<view class="container" style="background-color: {{isChild ? '#F7F7F7' : '#FFF'}}">
  <view class="comment-title">
    <image class="comment-portrait" src="{{comment.avatarUrl}}"></image>
    <text class="comment-nickname">{{comment.nickName}}</text>
  </view>
  <view class="comment-contentWrapper" catch:tap="handleComment" hover-class="comment-click">
    <view wx:if="{{comment.type === 2}}" class="comment-content" >
      <text>回复</text>
      <text style="color: #3399CC">@{{comment.replyUser.nickName}}</text>
      <text>：{{comment.content}}</text>
    </view>
    <view wx:else class="comment-content">{{comment.content}}</view>
    <view class="comment-time">{{comment.createTime}}</view>
  </view>
</view>