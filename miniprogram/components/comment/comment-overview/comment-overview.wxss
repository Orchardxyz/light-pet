@import "../../../style/comment-click.wxss";

.comment-container {
  padding: 20rpx;
}

.comment-title {
  display: flex;
  align-items: center;
}

.comment-portrait {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.comment-nickname {
  flex: 1;
  color: #666;
}

.comment-contentWrapper {
  margin-left: 88rpx;
  border-bottom: 1rpx solid #dfdfdf;
}

.comment-content {
  font-size: 32rpx;
  line-height: 1.4;
  font-weight: 400;
  padding: 10rpx 0;
}

.comment-time {
  font-size: 24rpx;
  color: #939393;
  margin-bottom: 20rpx;
}

.comment-childrenWrapper {
  width: 90%;
  padding: 20rpx 15rpx;
  background-color: #f7f7f7;
  font-size: 30rpx;
  word-wrap: break-word;
}

/* 查看更多 */
.more-link {
  cursor: pointer;
}
