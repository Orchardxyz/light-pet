<block wx:for="{{commentList}}" wx:key="index">
    <LP-comment-overview 
    comment="{{item}}"
    momentId="{{momentId}}" 
    bind:onComment="handleReply" />
</block>

<LP-bottom-line wx:if="{{isAll}}" />

<view class="detail-operation">
    <LP-comment-bar 
    commentShow="{{commentShow}}" 
    placeholderTxt="{{placeholderTxt}}" 
    defaultValue="{{defaultCommentValue}}" 
    isReply="{{isReply}}"
    bind:handleComment="onComment"
    bind:handleReply="onReply" />
</view>