/* miniprogram/pages/moment/moment-detail/moment-detail.wxss */
.moment-detail {
  background-color: #FFF;
}

.detail-tab {
  height: 50rpx;
  border-left: 6rpx solid #009a61;
  background-color: #fff;
  color: #666;
  font-size: 35rpx;
}
.tab-item {
  padding: 5rpx 25rpx;
}

/* 评论区样式 */
.detail-comment {
  padding: 20rpx;
}

.comment-title {
  display: flex;
  align-items: center;
}

.comment-portrait {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.comment-nickname {
  flex: 1;
  /* font-size: 35rpx; */
  color: #666;
}

.comment-contentWrapper {
  margin-left: 88rpx;
  /* border-bottom: 1rpx solid rgba(0, 0, 0, 0.1); */
}

.comment-click {
  background-color: #F7F7F7;
}

.comment-content {
  font-size: 32rpx;
  line-height: 1.4;
  font-weight: 400;
  padding: 10rpx 0;
}

.comment-time {
  font-size: 24rpx;
  color: #939393;
  margin-bottom: 20rpx;
}

.comment-childrenWrapper {
  padding: 20rpx 15rpx;
  margin-left: 88rpx;
  background-color: #F7F7F7;
  font-size: 30rpx;
}

/* 评论条 */
.detail-operation {
  position: fixed;
  bottom: 0;
}
