.container {
    padding: 20rpx;
}

.content {
    width: 100%;
    height: 360rpx;
    box-sizing: border-box;
}

.footer {
    display: flex;
    align-items: center;
    position: fixed;
    bottom: 0;
    
    width: 100%;
    padding: 20rpx;
    box-sizing: border-box;
    background: #f1f1f1;
}

.words-num {
    flex: 1;
    padding-right: 30rpx;
    text-align: right;
    color: #474747;
    font-size: 32rpx;
}

.send-btn {
    margin-right: 20rpx;
    background: #009A61;
    color: #FFF;
    font-size: 20rpx;
    font-weight: 500;
}

/* 图片样式 */

.img-list {
    display: flex;
    flex-wrap: wrap;
    margin-top: 20rpx;
}

.img-wrapper {
    position: relative;
    overflow: hidden;

    width: 220rpx;
    height: 220rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;

    text-align: center;
}

.img {
    width: 100%;
    height: 100%;
}

.icon-shanchudelete30 {
    position: absolute;
    top: 0;
    right: 0;

    width: 40rpx;
    height: 40rpx;
    background-color: #000;

    opacity: 0.4;
    color: #FFF;
    text-align: center;
    line-height: 40rpx;
    font-size: 38rpx;
    font-weight: bolder;
}

.selectphoto {
    position: relative;
    border: 2rpx dashed #cbd1d7;
}

.icon-tianjia {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    
    color: #cbd1d7;
    font-size: 60rpx;
}
