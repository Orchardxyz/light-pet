/* pages/user/user.wxss */
page {
  background-color: #f1f1f1;
}

/* 上半部分 */
.user-container {
  height: 250rpx;
  filter: blur(40rpx);
  opacity: 0.4;
}

.user-mask {
  position: absolute;
  width: 100%;
  height: 250rpx;
  background-color: #333;
  top: 0;
  left: 0;
  z-index: -1;
}

.user-header {
  display: flex;
  position: absolute;
  align-items: center;
  top: 0;
  left: 0;
  width: 100%;
  height: 250rpx;
  padding: 20rpx;
  box-sizing: border-box;
  align-items: center;
}

.user-avatarUrl {
  display: block;
  overflow: hidden;
  width: 130rpx;
  height: 130rpx;
  border: 1px solid #ccc;
}

.user-detail,
.user-login {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 15rpx;
  font-size: 35rpx;
  color: #fff;
}

.user-login {
  padding: 10rpx 20rpx;
  /* border: 2rpx solid #999; */
  border-radius: 50rpx;
  font-weight: 200;
}

.user-detail .user-nickname {
  font-size: 50rpx;
}
.user-detail .user-info {
  display: flex;
  align-items: center;
  font-size: 32rpx;
}

.user-detail .user-info :nth-child(1) {
  margin-right: 10rpx;
}

/* 下半部分 */
.user-content {
  display: block;
  overflow: hidden;
  margin: 50rpx 30rpx;
  border-radius: 20rpx;
  box-sizing: border-box;
}

.user-content-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 25rpx;
  background-color: #fff;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.item-left {
  display: flex;
  align-items: center;
}

.item-left text {
  display: inline-block;
  padding-left: 20rpx;
}

.item-left .iconfont {
  font-size: 50rpx;
  color: #009a61;
}

.item-right {
  padding-top: 5rpx;
  margin-left: auto;
}

.icon-xuanzeqixiayige_o {
  margin-left: auto;
  font-size: 35rpx;
  color: #ccc;
}

/* 突出字体 */
.strong-font {
  font-size: 50rpx;
  font-weight: 500;
}

/* 一些突出字体之外的小字样式 */
.small-font {
  color: #666;
  font-size: 35rpx;
  font-weight: normal;
}
