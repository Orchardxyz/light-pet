<view class="notification">
    <view class="notification-item" data-type="{{notifyType.SYSTEM}}" bind:tap="enterDetail">
        <view class="iconfont-wrapper" style="background-color: #FF6666">
            <i class="iconfont icon-xitong" />
        </view>
        <view class="content-wrapper">
            <view class="content">系统通知</view>
            <view class="content-right">
                <badge wx:if="{{notifyCount.system}}" count="{{notifyCount.system}}" />
                <i class="iconfont icon-xuanzeqixiayige_o" />
            </view>
        </view>
    </view>
    <view class="notification-item" data-type="{{notifyType.STAR}}" bind:tap="enterDetail">
        <view class="iconfont-wrapper" style="background-color: #990033">
            <i class="iconfont icon-star-copy" />
        </view>
        <view class="content-wrapper">
            <view class="content">谁收藏了我的内容</view>
            <view class="content-right">
                <badge wx:if="{{notifyCount.star}}" count="{{notifyCount.star}}" />
                <i class="iconfont icon-xuanzeqixiayige_o" />
            </view>
        </view>
    </view>
    <view class="notification-item" data-type="{{notifyType.LIKE}}" bind:tap="enterDetail">
        <view class="iconfont-wrapper" style="background-color: #FFCC33">
            <i class="iconfont icon-pet" />
        </view>
        <view class="content-wrapper">
            <view class="content">谁赞了我</view>
            <view class="content-right">
                <badge wx:if="{{notifyCount.like}}" count="{{notifyCount.like}}" />
                <i class="iconfont icon-xuanzeqixiayige_o" />
            </view>
        </view>
    </view>
    <view class="notification-item" data-type="{{notifyType.COMMENT_REPLY}}" bind:tap="enterDetail">
        <view class="iconfont-wrapper" style="background-color: #009A61">
            <i class="iconfont icon-pinglun" />
        </view>
        <view class="content-wrapper">
            <view class="content">评论和回复</view>
            <view class="content-right">
                <badge wx:if="{{notifyCount.comment_reply}}" count="{{notifyCount.comment_reply}}" />
                <i class="iconfont icon-xuanzeqixiayige_o" />
            </view>
        </view>
    </view>
</view>