/* miniprogram/pages/pet/history/history.wxss */
page {
  background-color: #fff;
}

.bg-container {
  height: 320rpx;
  filter: blur(40rpx);
  opacity: 0.4;
}

.bg-mask {
  position: absolute;
  width: 100%;
  height: 320rpx;
  background-color: #333;
  top: 0;
  left: 0;
  z-index: -1;
}

.pet {
  display: flex;
  position: absolute;

  top: 5%;
  left: 50%;
  transform: translate(-50%, -5%);

  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
}

.pet text {
  font-size: 35rpx;
  color: #333;
}

.timeline-wrapper {
  margin-top: 20rpx;
}
